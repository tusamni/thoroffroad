---
import Icon from "@/components/Icon";

interface Props {
	part: any;
}
const { part, ...attrs } = Astro.props;
---

<div class="flex flex-col gap-2">
	<div class="flex gap-1 items-center">
		<Icon icon="hero/CheckCircle" class="text-black w-5 h-5" />
		<div class="font-semibold text-lg">{part.title}</div>
	</div>

	<div class="text-sm line-clamp-4">{part.description}</div>
</div>
