---
import Icon from "@/components/Icon";

interface Props {
	part: any;
	url?: string;
	classes?: string;
}
const { part, url, classes, ...attrs } = Astro.props;
---

<div class:list={["relative group space-y-3 md:space-y-6 p-8 rounded bg-rock-700 transition duration-200 hover:bg-rock-700/80 backdrop-blur-sm", classes]} {...attrs}>
	<div class="flex flex-row gap-3 items-center text-white">
		<div class="size-6 md:size-8 border-2 rounded relative flex-none overflow-hidden flex justify-center items-center">
			<Icon icon={url ? part.data.icon : `parts/${part.data.icon}Outline`} class="absolute w-10 h-auto -rotate-12" />
		</div>

		<div class="font-semibold uppercase font-alt text-2xl md:text-3xl line-clamp-1 text-white">{part.data.title}</div>
	</div>

	<div class="text-base line-clamp-3 text-rock-100" set:html={part.data.description.short} />

	<div>
		<a href={url ? url : `/parts/${part.id}`} class="font-alt text-lg font-medium uppercase text-white">
			<span class="absolute inset-0"></span>
			{
				url ? (
					<div>Contact Us &#x2192;</div>
				) : (
					<div>
						Read More <span class="group-hover:translate-x-2 transition duration-200 inline-block">&#x2192;</span>
					</div>
				)
			}
		</a>
	</div>
</div>
