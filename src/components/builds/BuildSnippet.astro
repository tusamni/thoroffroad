---
// props
interface Props {
    build: any;
    sizes?: string;
}
const { build, sizes = "100vw" } = Astro.props;

// components
import Hover from "../images/Hover.astro";
import Picture from "../images/Picture.astro";

// config
import { Business } from "../../config";

// date
import { timeAgo } from "../../functions/DateTime.js";
// images
import { getBuildImage } from "../../functions/Image";
---

<a href={`/builds/${build.slug}`} title={`${build.data.year} ${build.data.make} ${build.data.model} built by ${Business.nameLong}`} class="group overflow-hidden rounded-md">
    <div class="rounded-md">
        <Hover>
            <Picture src={getBuildImage(build.data.id, build.data.featuredImage)} sizes="500px" alt={`${build.data.year} ${build.data.make} ${build.data.model} built by ${Business.nameLong}`} class="object-cover aspect-[3/2] rounded-md" sizes={sizes} />
        </Hover>
    </div>

    <div class="p-4 rounded-md bg-white -mt-4 relative z-10 w-5/6 mx-auto">
        <h6 class="text-neutral-800 font-semibold">{build.data.year} {build.data.make} {build.data.model}</h6>
        <div class="flex justify-between">
            <p class="text-sm leading-7 text-neutral-400">{build.data.trim}</p>
            <p class="text-sm leading-7 text-neutral-400">{timeAgo(build.data.date)}</p>
        </div>
    </div>
</a>
