---
// props
interface Props {
    build: any;
    sizes?: string;
    classes?: string;
}
const { build, sizes = "100vw", classes } = Astro.props;

// components
import Picture from "@/components/images/Picture";

// config
import { Business } from "../../config";

// images
import { getBuildImage } from "../../functions/Image";
---

<a href={`/builds/${build.slug}`} class:list={[classes, "rounded-sm"]}>
    <Picture src={getBuildImage(build.data.id, build.data.featuredImage)} sizes="500px" alt={`${build.data.year} ${build.data.make} ${build.data.model} built by ${Business.nameLong}`} class="object-cover h-52 rounded-t-sm w-full" slot="picture" />

    <div class="flex flex-wrap items-center gap-y-3 text-stone-500 p-6 rounded-b">
        <h3 class="text-lg font-semibold line-clamp-1">{build.data.year}&nbsp;{build.data.make}&nbsp;{build.data.model}</h3>
        <ul class="text-xs line-clamp-2 comma-list">{build.data.parts.map((p) => <li>{p}</li>)}</ul>
    </div>
</a>
