---
// props
const { build } = Astro.props;

// components
import Hover from "../images/Hover.astro";
import Surround from "../content/Surround.astro";

// config
import { Business } from "../../config";

// images
import { getBuildImage } from "../../functions/Image";
import { Image } from "astro:assets";
---

<Surround href={`/builds/${build.slug}`} title={`${build.data.year} ${build.data.make} ${build.data.model} built by ${Business.nameLong}`}>
    <div class="group">
        <Hover>
            <Image src={getBuildImage(build.data.id, `01`)} width={350} height={250} alt={`${build.data.year} ${build.data.make} ${build.data.model} built by ${Business.nameLong}`} class="object-cover aspect-[3/2]" />
        </Hover>

        <div class="p-6">
            <h5>{build.data.year} {build.data.make} {build.data.model}</h5>
            <p class="text-base leading-7 text-neutral-500">{build.data.location.city}, {build.data.location.state}</p>
        </div>
    </div>
</Surround>
