---
// props
// props
interface Props {
    build: any;
    sizes?: string;
}
const { build, sizes = "100vw" } = Astro.props;

// components
import Hover from "../images/Hover.astro";
import Picture from "../images/Picture.astro";
import Surround from "../content/Surround.astro";

// config
import { Business } from "../../config";

// images
import { getBuildImage } from "../../functions/Image";
---

<Surround href={`/builds/${build.slug}`} title={`${build.data.year} ${build.data.make} ${build.data.model} built by ${Business.nameLong}`}>
    <div class="group">
        <Hover>
            <Picture src={getBuildImage(build.data.id, build.data.featuredImage)} sizes="500px" alt={`${build.data.year} ${build.data.make} ${build.data.model} built by ${Business.nameLong}`} class="object-cover aspect-[3/2]" sizes={sizes} />
        </Hover>

        <div class="p-6">
            <h5>{build.data.year} {build.data.make} {build.data.model}</h5>

            <div class="flex">
                <p class="text-base leading-7 text-neutral-400">{build.data.trim}</p>
            </div>
        </div>
    </div>
</Surround>
