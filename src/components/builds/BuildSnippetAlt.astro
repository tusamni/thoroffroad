---
// props
interface Props {
    build: any;
    sizes?: string;
    description?: boolean;
    classes?: string;
}
const { build, sizes = "100vw", description = true, classes } = Astro.props;

// components
import Picture from "@/components/images/Picture";

// functions
import { timeAgo } from "@/functions/DateTime";

// images
import { getBuildImage } from "../../functions/Image";
---

<a href={`/builds/${build.slug}`} class="@container group relative flex items-center justify-center h-[27em] overflow-hidden">
    <div class="absolute w-full h-full">
        <Picture src={getBuildImage(build.data.id, build.data.featuredImage)} class="w-full h-full object-cover group-hover:scale-105 group-hover:rotate-1 duration-500 transition" loading="eager" sizes="100vw" />
    </div>

    <div class="bg-white absolute bottom-0 left-0 z-10 space-y-3 px-4 py-6 w-10/12 lg:w-5/6 xl:w-2/3 xl:@sm:w-10/12">
        <div class="flex justify-between items-center hover:cursor-pointer">
            <h4 class="@xs:text-2xl @md:text-3xl line-clamp-1">{build.data.year}&nbsp;{build.data.make}&nbsp;{build.data.model}</h4>
        </div>

        {
            description && (
                <ul class="text-xs line-clamp-2 comma-list">
                    {build.data.parts.map((p) => (
                        <li>{p}</li>
                    ))}
                </ul>
            )
        }
    </div>
</a>
