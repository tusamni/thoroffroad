---
// props
interface Props {
    current?: boolean;
}
const { current = false, ...attrs } = Astro.props;
---

<a class:list={["w-full text-sm hover:bg-neutral-100 transition duration-300 rounded-md p-3 text-neutral-700 font-medium hover:text-neutral-800", current ? `bg-neutral-100` : `bg-neutral-200`]} {...attrs}>
    <slot />
</a>
