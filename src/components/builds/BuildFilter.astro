---
// props
interface Props {
    current?: boolean;
}
const { current = false, ...attrs } = Astro.props;
---

<a class:list={["w-full text-sm hover:bg-blue-100 border border-blue-200 transition duration-300 rounded p-3 text-stone-700 font-medium hover:text-stone-800", current ? `bg-blue-100` : `bg-blue-50`]} {...attrs}>
    <slot />
</a>
