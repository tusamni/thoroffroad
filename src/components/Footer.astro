---
// images
import logo from "../assets/images/logo-white.png";

const vehicles = ["Chevrolet", "Ford", "GMC", "Jeep", "Lexus", "RAM", "Toyota", "UTV"];
const parts = ["Bed & Roof", "Body & Bumper", "Lighting", "Performance", "Specialties", "Suspension", "Wheel & Tire"];
---

<div class="bg-gray-900">
    <footer class="mx-auto container" aria-labelledby="footer-heading">
        <h2 id="footer-heading" class="sr-only">Footer</h2>

        <div class="pb-8 pt-16 sm:pt-24 lg:pt-32">
            <div class="grid grid-cols-2 justify-between">
                <div class="max-w-md space-y-12">
                    <img src={logo.src} class="h-14" />

                    <p class="text-md leading-7 text-gray-300">Located in Dripping Springs, Texas, THOR Off-Road are experts in designing and building off-road vehicles that deliver the exact performance and style that our customers dream about.</p>

                    <div class="flex space-x-6">
                        <a href="https://www.facebook.com/thoroffroadtx/" target="_blank" title="THOR Off-Road Facebook">
                            <svg viewBox="0 0 16 16" class="h-auto w-4 text-white" astro-icon="bi:facebook">
                                <path fill="currentColor" d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"></path>
                            </svg>
                        </a>
                        <a href="https://www.instagram.com/thor_offroad/" target="_blank" title="THOR Off-Road Instagram">
                            <svg viewBox="0 0 16 16" class="h-auto w-4 text-white" astro-icon="bi:instagram">
                                <path
                                    fill="currentColor"
                                    d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.917 3.917 0 0 0-1.417.923A3.927 3.927 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.916 3.916 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.926 3.926 0 0 0-.923-1.417A3.911 3.911 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0h.003zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599.28.28.453.546.598.92.11.281.24.705.275 1.485.039.843.047 1.096.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.47 2.47 0 0 1-.599.919c-.28.28-.546.453-.92.598-.28.11-.704.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.478 2.478 0 0 1-.92-.598 2.48 2.48 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233 0-2.136.008-2.388.046-3.231.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92.28-.28.546-.453.92-.598.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045v.002zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92zm-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217zm0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334z">
                                </path>
                            </svg>
                        </a>
                        <a href="https://www.youtube.com/channel/UCq4-u8q-XIz4_YyCrZC_y6w/featured" target="_blank" title="THOR Off-Road YouTube">
                            <svg viewBox="0 0 16 16" class="h-auto w-4 text-white" astro-icon="bi:youtube">
                                <path
                                    fill="currentColor"
                                    d="M8.051 1.999h.089c.822.003 4.987.033 6.11.335a2.01 2.01 0 0 1 1.415 1.42c.101.38.172.883.22 1.402l.01.104.022.26.008.104c.065.914.073 1.77.074 1.957v.075c-.001.194-.01 1.108-.082 2.06l-.008.105-.009.104c-.05.572-.124 1.14-.235 1.558a2.007 2.007 0 0 1-1.415 1.42c-1.16.312-5.569.334-6.18.335h-.142c-.309 0-1.587-.006-2.927-.052l-.17-.006-.087-.004-.171-.007-.171-.007c-1.11-.049-2.167-.128-2.654-.26a2.007 2.007 0 0 1-1.415-1.419c-.111-.417-.185-.986-.235-1.558L.09 9.82l-.008-.104A31.4 31.4 0 0 1 0 7.68v-.123c.002-.215.01-.958.064-1.778l.007-.103.003-.052.008-.104.022-.26.01-.104c.048-.519.119-1.023.22-1.402a2.007 2.007 0 0 1 1.415-1.42c.487-.13 1.544-.21 2.654-.26l.17-.007.172-.006.086-.003.171-.007A99.788 99.788 0 0 1 7.858 2h.193zM6.4 5.209v4.818l4.157-2.408L6.4 5.209z">
                                </path>
                            </svg>
                        </a>
                        <a href="https://g.page/thoroffroadtx" target="_blank" title="THOR Off-Road Google Maps">
                            <svg viewBox="0 0 16 16" class="h-auto w-4 text-white" astro-icon="bi:map-fill">
                                <path fill="currentColor" fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.598-.49L10.5.99 5.598.01a.5.5 0 0 0-.196 0l-5 1A.5.5 0 0 0 0 1.5v14a.5.5 0 0 0 .598.49l4.902-.98 4.902.98a.502.502 0 0 0 .196 0l5-1A.5.5 0 0 0 16 14.5V.5zM5 14.09V1.11l.5-.1.5.1v12.98l-.402-.08a.498.498 0 0 0-.196 0L5 14.09zm5 .8V1.91l.402.08a.5.5 0 0 0 .196 0L11 1.91v12.98l-.5.1-.5-.1z"></path>
                            </svg>
                        </a>
                    </div>
                </div>

                <div class="mt-16 grid gap-8 xl:mt-0">
                    <div class="md:grid md:grid-cols-3 md:gap-8">
                        <div>
                            <h3 class="font-semibold leading-6 text-gray-200">Vehicles</h3>
                            <ul role="list" class="mt-6 space-y-3">
                                {
                                    vehicles.map((v) => (
                                        <li>
                                            <a href="#" class="text-sm leading-6 text-gray-400 hover:text-gray-900">
                                                {v}
                                            </a>
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>

                        <div class="mt-10 md:mt-0">
                            <h3 class="font-semibold leading-6 text-gray-200">Parts</h3>
                            <ul role="list" class="mt-6 space-y-3">
                                {
                                    parts.map((p) => (
                                        <li>
                                            <a href="#" class="text-sm leading-6 text-gray-400 hover:text-gray-900">
                                                {p}
                                            </a>
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>

                        <div class="mt-10 md:mt-0">
                            <h3 class="font-semibold leading-6 text-gray-200">Sitemap</h3>
                            <ul role="list" class="mt-6 space-y-4">
                                <li>
                                    <a href="#" class="text-sm leading-6 text-gray-400 hover:text-gray-900">Sitemap</a>
                                </li>

                                <li>
                                    <a href="#" class="text-sm leading-6 text-gray-400 hover:text-gray-900">Privacy Policy</a>
                                </li>

                                <li>
                                    <a href="#" class="text-sm leading-6 text-gray-400 hover:text-gray-900">Terms of Use</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-16 border-t border-gray-900/10 pt-8 sm:mt-20 lg:mt-24">
                <p class="text-xs leading-5 text-gray-500">&copy; 2020 Your Company, Inc. All rights reserved.</p>
            </div>
        </div>
    </footer>
</div>
