---
import { getBuildTitle } from "@/functions/Content";
import { getBuildImage } from "@/functions/Image";
import Picture from "@/components/images/Picture";

interface Props {
    build: any;
}
const { build, ...attrs } = Astro.props;
---

<div class="relative">
    <Picture src={getBuildImage(build.id, build.data.images.snippet)} class="aspect-square object-cover" sizes="600px" />

    <div class="flex flex-col gap-2 p-3">
        <div class="font-semibold">{getBuildTitle(build.id)}</div>
        <div class="text-xs line-clamp-2">{build.data.summary}</div>

        <a href={`/builds/${build.slug}`} class="text-xs font-medium">
            <span class="absolute inset-0"></span>
             See Build &#x2192;
        </a>
    </div>
</div>
