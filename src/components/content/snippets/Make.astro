---
import Icon from "@/components/Icon";

interface Props {
    make: any;
    icon: boolean;
}
const { make, icon = true, ...attrs } = Astro.props;

console.log(make);
---

<div class="flex gap-4">
    {
        icon && (
            <div class="w-12 h-12 border-4 border-neutral-900 relative flex-none overflow-hidden flex justify-center items-center rounded-sm">
                <Icon icon={`makes/${make.data.title}Icon`} class="text-neutral-900 absolute w-16 h-auto -rotate-12" />
            </div>
        )
    }

    <div class="flex flex-col gap-2 relative">
        <div class="font-semibold">{make.data.title}</div>
        <div class="text-xs line-clamp-4">{make.data.description.short}</div>

        <a href={`/parts/${make.id}`} class="text-xs font-medium">
            <span class="absolute inset-0"></span>
             Read More &#x2192;
        </a>
    </div>
</div>
