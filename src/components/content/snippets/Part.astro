---
import Icon from "@/components/Icon";

interface Props {
    part: any;
    url: string;
}
const { part, url, ...attrs } = Astro.props;
---

<div class="flex flex-col sm:flex-row md:flex-col xl:flex-row gap-4">
    <div class="w-12 h-12 border-4 border-neutral-900 relative flex-none overflow-hidden flex justify-center items-center rounded-sm">
        <Icon icon={url ? part.data.images.icon : `parts/${part.data.images.icon}Outline`} class="text-neutral-900 absolute w-14 h-auto -rotate-12" />
    </div>

    <div class="flex flex-col gap-2 relative">
        <div class="font-semibold">{part.data.title}</div>
        <div class="text-xs line-clamp-4">{part.data.description.short}</div>

        <a href={url ? url : `/parts/${part.id}`} class="text-xs font-medium">
            <span class="absolute inset-0"></span>
            {url ? <div>Contact Us &#x2192;</div> : <div>Read More &#x2192;</div>}
        </a>
    </div>
</div>
