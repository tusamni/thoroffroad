---
interface Props {
    number: number;
    heading: string;
    content: string;
    darkTheme: boolean;
}
const { number, heading, content, darkTheme = false } = Astro.props;
---

<div class="space-y-4 @container">
    <div class="flex flex-col @md:flex-row gap-3">
        <span class="self-start px-3 py-1 rounded bg-neutral-50 text-neutral-700 text-lg lg:text-xl font-bold">{number}</span>
        <h5 class={darkTheme ? `text-neutral-200` : `text-neutral-900`}>{heading}</h5>
    </div>

    <div class:list={["md:text-lg leading-7 sm:max-w-md lg:max-w-none", darkTheme ? `text-neutral-400` : `text-neutral-600`]}>
        <p>{content}</p>
    </div>
</div>
