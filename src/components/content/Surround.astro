---
// props
interface Props {
    href?: string;
    content: any;
    subtitle?: string;
    classes?: string;
}
const { href, content, subtitle, classes } = Astro.props;

// components
import Hover from "../images/Hover.astro";
import Picture from "../images/Picture.astro";
---

<a href={href} class:list={[`group grid gap-6 md:gap-12 bg-neutral-100/50 rounded grid-cols-1 lg:grid-cols-2 p-6 md:p-8 lg:p-12`, classes]}>
    <div class="flex flex-col justify-between gap-12 lg:order-2">
        <div class="space-y-6">
            <h3>{content.title}</h3>
            <p class="text-neutral-600 text-lg" set:html={content.descriptionShort} />
        </div>

        <div>
            <div class="text-base font-semibold leading-7 text-neutral-800">{subtitle}</div>
            <ul class="comma-list text-sm text-neutral-600">
                <slot />
            </ul>
        </div>
    </div>

    <div class="flex lg:order-1">
        <Hover>
            <Picture src={content.featured} alt={`${content.title} Featured Build`} class="object-cover w-full h-full rounded shadow-xl aspect-video" sizes="350px" />
        </Hover>
    </div>
</a>
