---
// components
import TireTracks from "../../vectors/tracks/TireTracks02.astro";
import Section from "../../Section.astro";
import Container from "../../Container.astro";
---

<div class="relative bg-gradient-to-r from-gray-900 to-gray-700">
    <TireTracks class="absolute top-0 right-0 w-[1000px] fill-gray-700 text-gray-700/30" />

    <Section classes="relative z-10">
        <Container>
            <div class="mx-auto max-w-2xl lg:mx-0">
                <div class="text-sm leading-7 text-gray-400 mb-2 uppercase">
                    <slot name="subheading" />
                </div>

                <slot name="heading" />

                <div class="mt-6 text-lg leading-8 text-gray-300">
                    <slot name="description" />
                </div>
            </div>

            <slot name="content" />
        </Container>
    </Section>
</div>
