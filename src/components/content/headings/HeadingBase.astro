---
// components
import Container from "../../Container.astro";
import Pill from "../../buttons/Pill.astro";

// props
interface Props {
    subheading?: string;
    heading: string;
    description?: string;
}
const { subheading, heading, description } = Astro.props;
---

<div>
    <Container>
        <div class="bg-white max-w-3xl space-y-8 py-10 px-14 rounded-sm relative">
            {subheading && <Pill>{subheading}</Pill>}

            <h1 set:html={heading} />

            {description && <div class="space-y-4 text-lg md:text-xl text-stone-600 !leading-8" set:html={description} />}
        </div>

        <slot />
    </Container>
</div>
