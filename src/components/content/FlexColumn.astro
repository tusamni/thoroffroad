---
// props
interface Props {
    float?: boolean;
    reverse?: boolean;
}
const { float = false, reverse = false, ...attrs } = Astro.props;
---

<div class:list={["flex flex-col lg:flex-row gap-8", reverse && `lg:flex-row-reverse`]} {...attrs}>
    <div class:list={["w-full lg:w-1/3 flex-none", float && "lg:h-full lg:sticky lg:top-32"]}>
        <slot name="left" />
    </div>

    <div class="space-y-32 lg:w-2/3">
        <slot />
    </div>
</div>
