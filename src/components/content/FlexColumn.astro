---
// props
interface Props {
    float?: boolean;
}
const { float = false, ...attrs } = Astro.props;
---

<div class="flex gap-8" {...attrs}>
    <div class:list={["w-1/3 flex-none", float && "sticky top-32"]}>
        <slot name="left" />
    </div>

    <div class="space-y-32">
        <slot />
    </div>
</div>
