---
// props
interface Props {
    float?: boolean;
}
const { float = false, ...attrs } = Astro.props;
---

<div class="flex flex-col lg:flex-row gap-8" {...attrs}>
    <div class:list={["w-full lg:w-1/3 flex-none", float && "lg:h-full lg:sticky lg:top-32"]}>
        <slot name="left" />
    </div>

    <div class="space-y-32">
        <slot />
    </div>
</div>
