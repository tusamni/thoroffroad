---
// props
interface Props {
    theme?: string;
}
const { theme = "primary", ...attrs } = Astro.props;

// background theming
const themes = {
    primary: ["bg-gradient-to-br from-stone-700 to-stone-900"],
    secondary: ["bg-gradient-to-br from-stone-300 to-stone-100"],
};
---

<div class={themes[theme]} {...attrs}>
    <slot />
</div>
