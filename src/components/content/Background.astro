---
// props
interface Props {
    color?: string;
    opacity?: number;
}
const { color = "bg-stone-200", opacity = 0.4 } = Astro.props;
---

<div class:list={["foreground", color]}>
    <div class="background"></div>

    <div class="relative">
        <slot />
    </div>
</div>

<style define:vars={{ opacity }}>
    .foreground {
        position: relative;
    }
    .background {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background-image: url(/images/asphalt.png);
        background-repeat: repeat;
        opacity: var(--opacity);
    }
</style>
