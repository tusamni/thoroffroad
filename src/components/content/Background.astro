---
// props
interface Props {
    theme?: string;
}
const { theme = "primary" } = Astro.props;
---

{
    theme == "primary" ? (
        <div class="bg-gradient-to-r from-neutral-900 to-neutral-700">
            <slot />
        </div>
    ) : (
        <div class="bg-gradient-to-bl from-neutral-600 to-neutral-900">
            <slot />
        </div>
    )
}
