---
import Icon from "@/components/Icon";

interface Props {
    make: any;
    url?: string;
}
const { make, url, ...attrs } = Astro.props;
---

<div class="flex flex-col sm:flex-row md:flex-col xl:flex-row gap-4 relative">
    <div class="w-12 h-12 border-4 border-neutral-900 relative flex-none overflow-hidden flex justify-center items-center rounded-sm">
        <Icon icon={make.data.icon ? make.data.icon : `makes/${make.data.title}Icon`} class="text-neutral-900 absolute w-16 h-auto -rotate-12" />
    </div>

    <div class="flex flex-col gap-2">
        <div class="font-semibold">{make.data.title}</div>
        <div class="text-xs line-clamp-4" set:html={make.data.description.long} />

        <a href={url ? url : `/vehicles/${make.id}`} class="text-xs font-medium">
            <span class="absolute inset-0"></span>
            {url ? <div>Contact Us &#x2192;</div> : <div>Read More &#x2192;</div>}
        </a>
    </div>
</div>
