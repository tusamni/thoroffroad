---
interface Props {
	model: any;
}
const { model, ...attrs } = Astro.props;
---

<div class="flex flex-col relative space-y-4 group">
	<div class="space-y-2">
		<div class="font-bold uppercase text-xl">{model.data.title}</div>
		<div class="line-clamp-4">{model.data.description.short}</div>
	</div>

	<a href={`/builds/?buildMake=${model.data.make.id}&buildModel=${model.data.slug}`} class="text-base uppercase bg-rock-100 flex justify-center p-3 group-hover:bg-rock-200/50">
		<span class="absolute inset-0"></span>

		<div class="font-semibold">
			{model.data.title} Builds
		</div>
	</a>
</div>
