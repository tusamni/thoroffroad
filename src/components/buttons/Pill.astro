---
interface Props {
    theme?: string;
    size?: string;
}
const { theme = "primary", size = "base", ...attrs } = Astro.props;

// pill theming
const base = "font-semibold inline px-3 py-2 rounded";
const themes = {
    primary: ["text-stone-700 bg-stone-100"],
    secondary: ["text-stone-100 bg-stone-500"],
};
---

<div class:list={[base, themes[theme], `text-${size}`]} {...attrs}>
    <slot />
</div>
