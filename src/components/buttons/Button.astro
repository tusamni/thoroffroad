---
// props
interface Props {
    href?: string;
    theme?: string;
    size?: string;
    icon?: string;
}
const { href, theme = "primary", size = "base", icon, ...attrs } = Astro.props;

// components
import { Icon } from "astro-icon";
---

{
    href ? (
        <a href={href} class:list={[`button button-${theme} text-${size} group`]} {...attrs}>
            {icon && (
                <div class="button-icon">
                    <Icon name={icon} class="h-2/5 w-auto" />
                </div>
            )}

            <div class:list={["button-text", icon ? `rounded-r` : `rounded`]}>
                <slot />
            </div>
        </a>
    ) : (
        <button class:list={[`button button-${theme} text-${size} group`]} {...attrs}>
            {icon && (
                <div class="button-icon">
                    <Icon name={icon} class="h-2/5 w-auto" />
                </div>
            )}

            <div class:list={["button-text", icon ? `rounded-r` : `rounded`]}>
                <slot />
            </div>
        </button>
    )
}
