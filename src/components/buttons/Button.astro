---
interface Props {
    href?: string;
    theme?: string;
    size?: string;
}
const { href, theme = "primary", size = "lg", ...attrs } = Astro.props;
---

{
    href ? (
        <a href={href} class:list={["button", `button-${theme}`, `button-${size}`]} {...attrs}>
            <span class="-skew-x-24">
                <slot />
            </span>
        </a>
    ) : (
        <div class:list={["button", `button-${theme}`, `button-${size}`]} {...attrs}>
            <div class="-skew-x-12">
                <slot />
            </div>
        </div>
    )
}
