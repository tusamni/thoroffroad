---
// props
interface Props {
    arrow?: boolean;
}
const { arrow = false, ...attrs } = Astro.props;
---

<a class="group text-md font-semibold text-white hover:cursor-pointer inline-block" {...attrs}>
    <slot />

    {
        arrow && (
            <span aria-hidden="true" class="ml-1 group-hover:ml-2 transition-all">
                &rarr;
            </span>
        )
    }
</a>
