---
// props
interface Props {
    url: string;
    arrow?: boolean;
}
const { url, arrow = false } = Astro.props;
---

<div>
    <a href={url} class="group text-md font-semibold text-white">
        <slot />

        {
            arrow && (
                <span aria-hidden="true" class="ml-0 group-hover:ml-1 transition-all">
                    &rarr;
                </span>
            )
        }
    </a>
</div>
