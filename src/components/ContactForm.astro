---
import Button from "../components/buttons/Button.astro";
---

<form class="space-y-6" action="#" method="post">
    <div class="space-y-2">
        <label for="name" class="block font-semibold leading-6 text-neutral-100">Name</label>
        <input type="text" name="name" id="name" autocomplete="name" class="block w-full rounded border-0 py-2 px-3.5 text-neutral-600 shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-amber-400 sm:text-sm sm:leading-6" required />
    </div>
    <div class="space-y-2">
        <label for="email" class="block font-semibold leading-6 text-neutral-100">Email</label>
        <input type="email" name="email" id="email" autocomplete="email" class="block w-full rounded border-0 py-2 px-3.5 text-neutral-600 shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-amber-400 sm:text-sm sm:leading-6" required />
    </div>
    <div class="space-y-2">
        <label for="phone-number" class="block font-semibold leading-6 text-neutral-100">Phone number</label>
        <input type="tel" name="phone-number" id="phone-number" autocomplete="tel" class="block w-full rounded border-0 py-2 px-3.5 text-neutral-600 shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-amber-400 sm:text-sm sm:leading-6" />
    </div>
    <div class="space-y-2">
        <label for="message" class="block font-semibold leading-6 text-neutral-100">Message</label>
        <textarea name="message" id="mssage" rows="4" class="block w-full rounded border-0 py-2 px-3.5 text-neutral-600 shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-amber-400 sm:text-sm sm:leading-6"></textarea>
    </div>

    <input type="hidden" name="formSource" value={Astro.url.pathname} />

    <div class="flex justify-end">
        <Button theme="secondary" icon="Envelope">Let's Go</Button>
    </div>
</form>
