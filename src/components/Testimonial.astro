---
interface Props {
    content: any;
}
const { content } = Astro.props;

// components
import Picture from "./images/Picture.astro";

// image
import { getBuildImage } from "../functions/Image";
---

<div class="inline-block mb-8">
    <figure class="rounded-md bg-gradient-to-br from-neutral-300 via-neutral-300 to-neutral-50 border border-neutral-500 p-8">
        <div class="col-span-3 md:col-span-2 space-y-6">
            <h6 class="text-neutral-800 line-clamp-1" set:html={`"${content.testimonial.highlight}"`} />

            <blockquote class="text-neutral-800 space-y-4 leading-6 text-sm" set:html={content.testimonial.content} />

            <figcaption class="mt-6 flex items-center gap-x-4">
                <Picture src={getBuildImage(content.path, 1)} alt={`THOR Build for ${content.name}`} sizes="100px" class="h-12 object-cover rounded-md aspect-square" />

                <div class="space-y-0">
                    <div class="font-semibold text-neutral-900">{content.testimonial.name}</div>
                    <div class="text-sm text-neutral-600">{content.location.city}, {content.location.state}</div>
                </div>
            </figcaption>
        </div>
    </figure>
</div>
