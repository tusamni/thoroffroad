---
// components
import { Icon } from "astro-icon";
import Button from "./buttons/Button.astro";
import Container from "./Container.astro";
import Section from "./Section.astro";

// config
import { Business } from "../config.js";

// images
import truck from "../assets/images/header01.jpg";
import image from "../assets/images/header02.jpg";
---

<div class="relative">
    <img src={image.src} class="object-cover w-full h-full absolute" />
    <div class="w-full h-full bg-gradient-to-tr from-gray-900/90 via-gray-900/90 to-gray-500/90 absolute backdrop-blur-sm"></div>

    <Container classes="relative z-10">
        <Section classes="space-y-12">
            <div class="grid lg:grid-cols-5 gap-8">
                <div class="lg:col-span-2 space-y-12 bg-gradient-to-br from-gray-300/90 via-gray-300/90 to-gray-50/90 border border-gray-500 p-8 rounded-md">
                    <div class="space-y-4">
                        <p class="text-gray-600 tracking-tight text-xl">Ready?</p>
                        <h2 class="text-gray-800">Let's start building your dream vehicle.</h2>
                    </div>

                    <div class="space-y-6 text-gray-600 text-lg leading-8">
                        <p>If you are ready to get started on designing and building the perfect truck, so are we.</p>
                        <p>Tell us a little about your truck build and contact information and we will reach out to you as soon as possible.</p>
                    </div>

                    <div class="w-full">
                        <form class="space-y-6" action="#" method="post">
                            <div class="space-y-2">
                                <label for="name" class="block font-semibold leading-6 text-gray-800">Name</label>
                                <input type="text" name="name" id="name" autocomplete="name" class="block w-full rounded-md border-0 py-2 px-3.5 text-gray-600 shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-amber-400 sm:text-sm sm:leading-6" required />
                            </div>
                            <div class="space-y-2">
                                <label for="email" class="block font-semibold leading-6 text-gray-800">Email</label>
                                <input type="email" name="email" id="email" autocomplete="email" class="block w-full rounded-md border-0 py-2 px-3.5 text-gray-600 shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-amber-400 sm:text-sm sm:leading-6" required />
                            </div>
                            <div class="space-y-2">
                                <label for="phone-number" class="block font-semibold leading-6 text-gray-800">Phone number</label>
                                <input type="tel" name="phone-number" id="phone-number" autocomplete="tel" class="block w-full rounded-md border-0 py-2 px-3.5 text-gray-600 shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-amber-400 sm:text-sm sm:leading-6" />
                            </div>
                            <div class="space-y-2">
                                <label for="message" class="block font-semibold leading-6 text-gray-800">Message</label>
                                <textarea name="message" id="mssage" rows="4" class="block w-full rounded-md border-0 py-2 px-3.5 text-gray-600 shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-amber-400 sm:text-sm sm:leading-6"></textarea>
                            </div>

                            <div class="flex justify-end">
                                <Button button={true} theme="secondary">Let's Go</Button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="lg:col-span-3 flex flex-col space-y-8">
                    <div class="hidden lg:block relative w-full h-full">
                        <img src={truck.src} class="absolute object-cover w-full h-full object-[50%,80%] rounded-md shadow-xl" />
                    </div>

                    <div class="relative flex flex-col xl:flex-row gap-8 file:justify-between">
                        <div class="flex gap-x-4 rounded-xl bg-white/5 p-6 ring-1 ring-inset ring-white/10 items-start">
                            <div class="space-y-1">
                                <div class="flex items-center gap-2">
                                    <Icon name="Map" class="h-5 w-5 flex-none text-white" />
                                    <h6>Visit Us</h6>
                                </div>

                                <div class="text-base leading-7">
                                    <p class="mt-2 text-gray-300">{Business.address.street01} {Business.address.street02}, {Business.address.city}, {Business.address.state}</p>
                                </div>
                            </div>
                        </div>

                        <div class="flex gap-x-4 rounded-xl bg-white/5 p-6 ring-1 ring-inset ring-white/10 items-start">
                            <div class="space-y-1">
                                <div class="flex items-center gap-2">
                                    <Icon name="Phone" class="h-5 w-5 flex-none text-white" />
                                    <h6>Call Us</h6>
                                </div>

                                <p class="mt-2 text-gray-300">Reach out to us at <a class="underline" href={`tel:${Business.phone}`}>{Business.phone}</a></p>
                            </div>
                        </div>

                        <div class="flex gap-x-4 rounded-xl bg-white/5 p-6 ring-1 ring-inset ring-white/10 items-start">
                            <div class="space-y-1">
                                <div class="flex items-center gap-2">
                                    <Icon name="Envelope" class="h-5 w-5 flex-none text-white" />
                                    <h6>Email Us</h6>
                                </div>

                                <p class="text-gray-300">Shoot us an email anytime, <a class="underline" href={`mailto:${Business.email}`}>{Business.email}</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </Section>
    </Container>
</div>
