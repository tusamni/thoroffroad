---
// imports
import { Icon } from "astro-icon";
import { Social } from "@/config";

import Container from "@/components/Container";
---

<div class="bg-orange-100">
    <Container>
        <div class="flex items-center justify-between py-4 sm:py-0">
            <div class="leading-6">
                <div class="text-sm flex items-center gap-2">
                    <Icon name="brands/Carli" class="w-10 sm:w-12 h-auto" />
                    <strong class="font-semibold line-clamp-1">Carli Suspension in Stock</strong>
                    <span class="hidden md:block">&middot;</span>
                    <span class="hidden md:block">Contact Us for Pricing!</span>
                </div>
            </div>

            <!-- social -->
            <div class="hidden sm:flex items-center">
                {
                    Social.map((s) => (
                        <a href={s.url} target="_blank" title={`THOR Off-Road ${s.title}`} class="py-4 px-2 group hover:bg-orange-100 transition">
                            <Icon name={s.icon} class="h-auto w-4 text-stone-800" />
                        </a>
                    ))
                }
            </div>
        </div>
    </Container>
</div>
