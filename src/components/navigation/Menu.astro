---
// components
import { Icon } from "astro-icon";
import Button from "../buttons/Button.astro";
import Container from "../Container.astro";
import MenuMobile from "./mobile/MenuMobile.astro";
import MenuParts from "./desktop/MenuParts.astro";
import MenuVehicles from "./desktop/MenuVehicles.astro";
import Picture from "../images/Picture.astro";

// config
import { Business } from "../../config.js";
---

<header class="bg-white relative">
    <Container>
        <nav class="flex items-center py-4 md:py-6 justify-between gap-x-6" aria-label="Global">
            <div class="flex lg:gap-x-6 items-center">
                <!-- logo -->
                <a href="/" title={Business.nameLong}>
                    <span class="sr-only">{Business.nameLong}</span>
                    <Picture src="website/logos/logo-black.png" alt={Business.nameLong} class="h-10 w-auto" />
                </a>

                <!--- desktop menu -->
                <div class="hidden lg:flex items-center">
                    <MenuVehicles />
                    <MenuParts />

                    <a href="/builds" title={`${Business.nameShort} Builds`} class="font-semibold leading-6 text-stone-800 transition px-4 py-3">Builds</a>
                </div>
            </div>

            <!-- contact buttons -->
            <div class="hidden lg:flex flex-1 items-center justify-end gap-6">
                <Button class="font-semibold text-base text-stone-800" href={`tel:${Business.phone}`} theme="primary">{Business.phone}</Button>
                <Button href="/contact" theme="secondary" icon="hero/Envelope">Contact Us</Button>
            </div>

            <!-- mobile trigger -->
            <div class="flex lg:hidden" x-data={`{ mobileMenu : false }`}>
                <button type="button" class="inline-flex items-center justify-center rounded text-stone-700 cursor-pointer" x-on:click={`mobileMenu = true`}>
                    <span class="sr-only">Open main menu</span>

                    <Icon name="hero/Hamburger" class="h-8 w-8 text-white cursor-pointer" />
                </button>

                <!-- mobile menu -->
                <MenuMobile />
            </div>
        </nav>
    </Container>
</header>
