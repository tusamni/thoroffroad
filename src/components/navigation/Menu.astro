---
// components
import { Icon } from "astro-icon";
import Button from "@/components/buttons/Button";
import Container from "@/components/Container";
import MenuMobile from "@/components/navigation/mobile/MenuMobile";
import MenuParts from "@/components/navigation/desktop/MenuParts";
import MenuVehicles from "@/components/navigation/desktop/MenuVehicles";

// config
import { Business } from "../../config.js";
---

<header class="bg-white relative">
    <Container>
        <nav class="flex items-center py-4 md:py-6 justify-between gap-x-4 lg:gap-x-6" aria-label="Global">
            <div class="flex gap-x-8 items-center">
                <!-- logo -->
                <a href="/" title={Business.nameLong}>
                    <span class="sr-only">{Business.nameLong}</span>

                    <Icon name="logo" class="h-8 w-auto" />
                </a>

                <!--- desktop menu -->
                <div class="hidden md:flex items-center md:gap-8">
                    <MenuVehicles />
                    <MenuParts />

                    <a href="/builds" title={`${Business.nameShort} Builds`} class="nav-item">Builds</a>
                </div>
            </div>

            <!-- contact buttons -->
            <div class="flex flex-1 items-center justify-end gap-x-4 lg:gap-x-6">
                <a href="/contact" title="Contact Us" class="sm:hidden font-semibold">Contact Us</a>

                <div class="hidden sm:block">
                    <Button href={`tel:${Business.phone}`} theme="primary">{Business.phone}</Button>
                </div>
                <div class="hidden sm:block">
                    <Button href="/contact" theme="secondary">Contact Us</Button>
                </div>
            </div>

            <!-- mobile trigger -->
            <div class="flex md:hidden" x-data={`{ mobileMenu : false }`}>
                <button type="button" class="inline-flex items-center justify-center rounded text-stone-700 cursor-pointer" x-on:click={`mobileMenu = true`}>
                    <span class="sr-only">Open main menu</span>

                    <Icon name="hero/Hamburger" class="h-8 w-8 cursor-pointer" />
                </button>

                <!-- mobile menu -->
                <MenuMobile />
            </div>
        </nav>
    </Container>
</header>
