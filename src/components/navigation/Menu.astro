---
// imports
import { Business } from "@/config";
import { Icon } from "astro-icon";
import { getCollection } from "astro:content";

import Container from "@/components/Container";
import MenuMobile from "@/components/navigation/mobile/MenuMobile";
import HoverMenu from "@/components/navigation/desktop/HoverMenu";
import MenuItem from "@/components/navigation/desktop/MenuItem";

// data
const allParts = await getCollection("parts");
const allBrands = await getCollection("brands");
const allMakes = await getCollection("makes");
const allModels = await getCollection("models");
---

<header class="bg-black bg-opacity-40 relative">
    <Container>
        <nav class="flex items-center py-4 md:py-6 justify-between gap-x-4 lg:gap-x-6" aria-label="Global">
            <div class="flex gap-x-8 items-center">
                <!-- logo -->
                <a href="/" title={Business.nameLong}>
                    <span class="sr-only">{Business.nameLong}</span>

                    <Icon name="logo" class="h-8 lg:h-10 w-auto text-white" />
                </a>

                <!--- desktop menu -->
                <div class="hidden md:flex items-center md:gap-6 lg:gap-8">
                    <HoverMenu title="Vehicles" identifier="vehicles">
                        {allMakes.map((m) => <MenuItem base="vehicles" item={m} items={allModels} />)}
                    </HoverMenu>

                    <a href="/builds" title={`${Business.nameShort} Builds`} class="nav-item">Builds</a>
                    <a href="/about" title={`About ${Business.nameLong}`} class="nav-item">About</a>
                </div>
            </div>

            <!-- contact buttons -->
            <div class="flex flex-1 items-center justify-end gap-x-3 lg:gap-x-6">
                <div>
                    <a href={`tel:${Business.phone}`} class="button button-ghost">
                        <div class="button-text text-xs sm:text-sm lg:text-base">
                            <span class="hidden sm:block">{Business.phone}</span>
                            <span class="sm:hidden">Call</span>
                        </div>
                    </a>
                </div>

                <div>
                    <a href="/contact" class="button button-primary !border-0">
                        <div class="button-text text-xs sm:text-sm lg:text-base">
                            <span class="hidden sm:block">Contact Us</span>
                            <span class="sm:hidden">Email</span>
                        </div>
                    </a>
                </div>
            </div>

            <!-- mobile trigger -->
            <div class="flex md:hidden" x-data={`{ mobileMenu : false }`}>
                <button type="button" class="inline-flex items-center justify-center cursor-pointer" x-on:click={`mobileMenu = true`}>
                    <span class="sr-only">Open main menu</span>

                    <Icon name="hero/Hamburger" class="h-8 w-8 cursor-pointer text-white" />
                </button>

                <!-- mobile menu -->
                <MenuMobile />
            </div>
        </nav>
    </Container>
</header>
