---
// components
import Container from "../../Container.astro";
---

<div class="relative" x-data={`{ vehiclesMega : false }`} x-on:mouseenter={`vehiclesMega = true`} x-on:mouseover.away={`vehiclesMega = false`} x-on:click={`vehiclesMega = true`} x-cloak>
    <button type="button" class="inline-flex items-center gap-x-2 first:font-semibold leading-6 text-white transition px-4 py-3" :class={`vehiclesMega ? 'bg-red-500' : ''`}>
        <span>Vehicles</span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 transition" :class={`vehiclesMega ? 'rotate-180' : ''`}>
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
        </svg>
    </button>

    <div
        x-cloak
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0"
        x-show="vehiclesMega"
        class="w-[40em] absolute top-0 mt-12 z-10 p-8 bg-gradient-to-r from-gray-100 via-gray-200 to-gray-300 shadow-lg ring-1 ring-gray-900/5 rounded-b-md rounded-tr-md">
        <div class="grid grid-cols-2 gap-x-6 gap-y-4 sm:gap-x-8 sm:gap-y-4">
            <a href="#" class="flex flex-col gap-x-4 text-sm font-semibold leading-6 text-gray-900">
                Chevrolet
                <ul class="comma-list line-clamp-1 text-xs font-light text-stone-500">
                    <li>Colorado</li>
                    <li>Silverado 1500</li>
                    <li>Silverado HD</li>
                    <li>Tahoe</li>
                </ul>
            </a>
            <a href="#" class="flex flex-col gap-x-4 text-sm font-semibold leading-6 text-gray-900">
                Ford
                <ul class="comma-list line-clamp-1 text-xs font-light text-stone-500">
                    <li>Bronco</li>
                    <li>F-150</li>
                    <li>Super-Duty</li>
                    <li>Raptor</li>
                </ul>
            </a>
            <a href="#" class="flex flex-col gap-x-4 text-sm font-semibold leading-6 text-gray-900">
                GMC
                <ul class="comma-list line-clamp-1 text-xs font-light text-stone-500">
                    <li>Canyon</li>
                    <li>Sierra 1500</li>
                    <li>Sierra HD</li>
                    <li>Yukon</li>
                </ul>
            </a>
            <a href="#" class="flex flex-col gap-x-4 text-sm font-semibold leading-6 text-gray-900">
                Jeep
                <ul class="comma-list line-clamp-1 text-xs font-light text-stone-500">
                    <li>Gladiator</li>
                    <li>Wrangler</li>
                </ul>
            </a>
            <a href="#" class="flex flex-col gap-x-4 text-sm font-semibold leading-6 text-gray-900">
                Lexus
                <ul class="comma-list line-clamp-1 text-xs font-light text-stone-500">
                    <li>GX</li>
                    <li>LX</li>
                </ul>
            </a>
            <a href="#" class="flex flex-col gap-x-4 text-sm font-semibold leading-6 text-gray-900">
                RAM
                <ul class="comma-list line-clamp-1 text-xs font-light text-stone-500">
                    <li>1500</li>
                    <li>2500 & 3500</li>
                </ul>
            </a>
            <a href="#" class="flex flex-col gap-x-4 text-sm font-semibold leading-6 text-gray-900">
                Toyota
                <ul class="comma-list line-clamp-1 text-xs font-light text-stone-500">
                    <li>4Runner</li>
                    <li>Land Cruiser</li>
                    <li>Tundra</li>
                </ul>
            </a>
            <a href="#" class="flex flex-col gap-x-4 text-sm font-semibold leading-6 text-gray-900">
                UTV
                <ul class="comma-list line-clamp-1 text-xs font-light text-stone-500">
                    <li>Can-Am</li>
                    <li>Polaris</li>
                </ul>
            </a>
        </div>
    </div>
</div>

<style>
    .comma-list li {
        @apply inline;
    }
    .comma-list li::after {
        content: ",";
    }

    .comma-list li:last-child::after {
        content: "";
    }
</style>
