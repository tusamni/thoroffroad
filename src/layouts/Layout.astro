---
// props
interface Props {
    includeCta?: boolean;
}
const { includeCta = true } = Astro.props;

// styles
import "../assets/css/_base.scss";

// components
import Banner from "../components/navigation/Banner.astro";
import Cta from "../components/Cta.astro";
import Footer from "../components/Footer.astro";
import Menu from "../components/navigation/Menu.astro";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <link rel="sitemap" href="/sitemap-index.xml" />

        <!-- fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Over+the+Rainbow&display=swap" rel="stylesheet" />
    </head>

    <body>
        <div class="sticky top-0 z-20">
            <Banner />
            <Menu />
        </div>

        <slot />

        {includeCta && <Cta />}
        <Footer />
    </body>
</html>
