---
import Layout from "../../layouts/Layout.astro";

// components
import Break from "../../components/Break.astro";
import Button from "../../components/buttons/Button.astro";
import Container from "../../components/Container.astro";
import HeadingBase from "../../components/content/headings/HeadingBase.astro";
import Link from "../../components/buttons/Link.astro";
import Section from "../../components/Section.astro";

// content
import { getCollection } from "astro:content";
const allParts = await getCollection("parts");

// images
import work from "../../assets/images/header02.jpg";
import build from "../../assets/images/builds/build06.jpg";

// content
const process = [
    {
        title: "The Top Brands",
        description: "We partner with the world's most trusted parts manufacturers in the industry to create quality builds that our customers can depend on.",
    },
    {
        title: "Test, Test, Test",
        description: "We don't just install parts, we put them to the test to ensure that they perform exactly the way we designed to deliver the ultimate off-road experience.",
    },
    {
        title: "Targeted Performance",
        description: "We help our customers find the right balance of style, performance, and budget to get the most out of their off-road vehicle build.",
    },
];
---

<Layout>
    <HeadingBase>
        <p slot="subheading">Our Philosophy</p>
        <h1 slot="heading">Off-Road Parts</h1>
        <p slot="description">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Maiores impedit perferendis suscipit eaque, iste dolor cupiditate blanditiis ratione.</p>

        <div slot="content">
            <div class="mx-auto mt-16 max-w-2xl lg:max-w-none">
                <dl class="grid max-w-xl grid-cols-1 gap-x-16 gap-y-16 lg:max-w-none lg:grid-cols-3">
                    {
                        process.map((p, i) => (
                            <div class="space-y-4">
                                <dt class="text-xl font-semibold leading-7 text-white flex gap-x-4 items-center">
                                    <span class="px-3 py-1 rounded-md bg-gray-700 text-gray-200 ring-1 ring-gray-600">{i + 1}</span>
                                    {p.title}
                                </dt>
                                <dd class="text-base leading-7 text-gray-300">
                                    <p>{p.description}</p>
                                </dd>
                            </div>
                        ))
                    }
                </dl>
            </div>
        </div>
    </HeadingBase>

    <div class="relative h-[700px]">
        <img src={build.src} alt="work" class="object-cover object-[10%,20%] w-full h-full" />
    </div>

    <div class="relative bg-gray-900">
        <Container>
            <Section>
                <div class="mx-auto flex max-w-2xl flex-col dddddddgap-16 lg:mx-0 lg:max-w-none lg:flex-row gap-24">
                    <div class="w-full lg:max-w-lg lg:flex-auto">
                        <h2>We're always looking for awesome people.</h2>
                        <p class="mt-6 text-xl leading-8 text-gray-300">Diam nunc lacus lacus aliquam turpis enim. Eget hac velit est euismod lacus. Est non placerat nam arcu. Cras purus nibh cursus sit eu in id.</p>
                        <img src="https://images.unsplash.com/photo-1606857521015-7f9fcf423740?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1344&h=1104&q=80" alt="" class="mt-16 aspect-[6/5] w-full rounded-2xl bg-gray-50 object-cover lg:aspect-auto lg:h-[34.5rem]" />
                    </div>

                    <div class="w-full lg:flex-auto">
                        <h3 class="sr-only">Job openings</h3>
                        <ul class="-my-8 divide-y divide-gray-100">
                            {
                                allParts.map((p) => (
                                    <li class="py-8">
                                        <dl class="relative flex flex-wrap gap-x-3">
                                            <dt class="sr-only">Role</dt>
                                            <dd class="w-full flex-none text-lg font-semibold tracking-tight text-gray-900">
                                                <a href="#" class="text-white text-2xl">
                                                    Full-time designer
                                                    <span class="absolute inset-0" aria-hidden="true" />
                                                </a>
                                            </dd>
                                            <dt class="sr-only">Description</dt>
                                            <dd class="mt-2 w-full flex-none text-base leading-7 text-gray-600">Quos sunt ad dolore ullam qui. Enim et quisquam dicta molestias. Corrupti quo voluptatum eligendi autem labore.</dd>
                                            <dt class="sr-only">Salary</dt>
                                            <dd class="mt-4 text-base font-semibold leading-7 text-gray-900">$75,000 USD</dd>
                                            <dt class="sr-only">Location</dt>
                                            <dd class="mt-4 flex items-center gap-x-3 text-base leading-7 text-gray-500">
                                                <svg viewBox="0 0 2 2" class="h-0.5 w-0.5 flex-none fill-gray-300" aria-hidden="true">
                                                    <circle cx="1" cy="1" r="1" />
                                                </svg>
                                                San Francisco, CA
                                            </dd>
                                        </dl>
                                    </li>
                                ))
                            }
                        </ul>

                        <div class="mt-8 flex border-t border-gray-100 pt-8">
                            <a href="#" class="text-sm font-semibold leading-6 text-indigo-600 hover:text-indigo-500">View all openings <span aria-hidden="true">&rarr;</span></a>
                        </div>
                    </div>
                </div>
            </Section>
        </Container>
    </div>
</Layout>
