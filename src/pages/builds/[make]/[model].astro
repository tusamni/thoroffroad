---
import Layout from "../../../layouts/Layout.astro";

// components
import BuildSnippet from "../../../components/builds/BuildSnippet.astro";
import Container from "../../../components/Container.astro";
import Filter from "../../../components/builds/Filter.astro";
import HeadingBase from "../../../components/content/headings/HeadingBase.astro";
import ListingGrid from "../../../components/builds/ListingGrid.astro";
import Picture from "../../../components/images/Picture.astro";
import Section from "../../../components/Section.astro";

// content
import { getCollection } from "astro:content";
export async function getStaticPaths() {
    const allModels = await getCollection("models");
    return allModels.map((model) => ({
        params: { make: model.data.make.toLowerCase(), model: model.data.slug },
        props: { model },
    }));
}
const { model } = Astro.props;

const allBuilds = await getCollection("builds", ({ slug, data }) => {
    return slug.includes(Astro.params.model) && slug.includes(Astro.params.make);
});

// aggregate the metadata
const allMakes = await getCollection("makes");
const allModels = await getCollection("models", ({ data, slug }) => {
    return data.make.includes(model.data.make);
});
const allParts = await getCollection("parts");
---

<Layout>
    <div class="relative">
        <Picture src={model.data.featured} class="absolute inset-0 w-full h-full object-cover saturate-50" width={2000} height={2000} alt={``} />
        <div class="absolute inset-0 w-full h-full bg-gradient-to-r from-black via-black/80 to-black/50"></div>

        <Section>
            <div class="relative">
                <HeadingBase heading={`${model.data.make} ${model.data.title} Builds`} />
            </div>
        </Section>
    </div>

    <Section classes="bg-neutral-300">
        <Container>
            <div class="grid grid-cols-1 gap-12 xl:grid-cols-4">
                <!-- filters -->
                <div class="space-y-6">
                    <div class="sticky top-48">
                        <div class="space-y-8">
                            <div class="space-y-4">
                                <h6 class="text-neutral-800">Filter by Parts</h6>
                                <div class="grid grid-cols-2 gap-3">
                                    {allParts.map((p) => <Filter href={`/builds/${p.slug}`}>{p.data.title}</Filter>)}
                                </div>
                            </div>

                            <div class="space-y-4">
                                <h6 class="text-neutral-800">Filter by Vehicle</h6>
                                <div class="grid grid-cols-2 gap-3">
                                    {
                                        allMakes.map((m) => (
                                            <Filter href={`/builds/${m.slug}`} current={m.slug.includes(model.data.make.toLowerCase()) ? true : false}>
                                                {m.data.title}
                                            </Filter>
                                        ))
                                    }
                                </div>
                            </div>

                            <div class="space-y-4">
                                <h6 class="text-neutral-800">Filter by Model</h6>
                                <div class="grid grid-cols-2 gap-3">
                                    {
                                        allModels.map((m) => (
                                            <Filter href={`${m.slug}`} current={m.slug.includes(model.slug) ? true : false}>
                                                {m.data.title}
                                            </Filter>
                                        ))
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- build listings -->
                <ListingGrid>
                    {allBuilds.map((b) => <BuildSnippet build={b} sizes="350px" />)}
                </ListingGrid>
            </div>
        </Container>
    </Section>
</Layout>
