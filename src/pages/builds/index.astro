---
import Layout from "../../layouts/Layout.astro";

// components
import Break from "../../components/Break.astro";
import BuildSnippet from "../../components/builds/BuildSnippet.astro";
import Button from "../../components/buttons/Button.astro";
import Container from "../../components/Container.astro";
import Section from "../../components/Section.astro";
import Link from "../../components/buttons/Link.astro";
import TireTracks01 from "../../components/vectors/tracks/TireTracks01.astro";
---

<Layout>
    <div class="relative bg-gradient-to-r from-gray-900 to-gray-700">
        <TireTracks01 classes="absolute top-0 right-0 w-[800px] text-gray-700/40" />

        <Section classes="relative z-10">
            <Container classes="space-y-16 sm:space-y-24 lg:space-y-32">
                <div class="mx-auto max-w-2xl lg:mx-0">
                    <p class="text-base font-semibold leading-7 text-gray-400">Our recent work</p>
                    <h2 class="mt-2 font-bold tracking-tight text-white text-7xl">THOR Builds</h2>
                    <p class="mt-6 text-lg leading-8 text-gray-400">Anim aute id magna aliqua ad ad non deserunt sunt. Qui irure qui lorem cupidatat commodo. Elit sunt amet fugiat veniam occaecat fugiat aliqua.</p>
                </div>

                <div class="grid grid-cols-1 gap-y-20 gap-x-16 xl:grid-cols-4">
                    <div class="space-y-6">
                        <div class="sticky top-48">
                            <form action="#" method="post">
                                <div class="grid grid-cols-1 gap-y-6 gap-x-8">
                                    <div class="space-y-2 mb-6">
                                        <div>
                                            <input type="text" name="first-name" id="first-name" autocomplete="given-name" class="block w-full rounded-md border-0 bg-white/10 py-2 px-3.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-amber-400 sm:text-sm sm:leading-6" placeholder="Search our builds..." />
                                        </div>
                                    </div>

                                    <div class="space-y-2">
                                        <label for="email" class="block font-semibold leading-6 text-white">Vehicle Make</label>
                                        <div>
                                            <select name="email" id="email" autocomplete="email" class="block w-full rounded-md border-0 bg-white/10 py-2 px-3.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-amber-400 sm:text-sm sm:leading-6">
                                                <option class="text-black">All</option>
                                                <option selected class="text-black">Ford</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="space-y-2">
                                        <label for="email" class="block font-semibold leading-6 text-white">Vehicle Model</label>
                                        <div>
                                            <select name="email" id="email" autocomplete="email" class="block w-full rounded-md border-0 bg-white/10 py-2 px-3.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-amber-400 sm:text-sm sm:leading-6">
                                                <option class="text-black">All</option>
                                                <option class="text-black" selected>F-150</option>
                                                <option class="text-black">Super-Duty</option>
                                                <option class="text-black">Bronco</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="col-span-3 space-y-16">
                        <ul role="list" class="mx-auto grid max-w-2xl grid-cols-1 gap-x-6 gap-y-20 sm:grid-cols-3 lg:mx-0 lg:max-w-none lg:gap-x-8 xl:col-span-3">
                            <BuildSnippet />
                            <BuildSnippet />
                            <BuildSnippet />
                            <BuildSnippet />
                            <BuildSnippet />
                            <BuildSnippet />
                            <BuildSnippet />
                            <BuildSnippet />
                            <BuildSnippet />
                        </ul>

                        <Break />

                        <div class="flex items-center justify-between">
                            <div class="hidden sm:block">
                                <p class="text-sm text-gray-300">
                                    Showing
                                    <span class="font-medium">1</span>
                                    to
                                    <span class="font-medium">10</span>
                                    of
                                    <span class="font-medium">20</span>
                                    results
                                </p>
                            </div>
                            <div class="flex flex-1 justify-between sm:justify-end gap-4">
                                <Button text="Previous" />
                                <Button text="Next" />
                            </div>
                        </div>
                    </div>
                </div>
            </Container>
        </Section>

        <Section classes="relative z-10">
            <Container />
        </Section>
    </div>
</Layout>
