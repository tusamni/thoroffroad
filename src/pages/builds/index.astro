---
import Layout from "../../layouts/Layout.astro";

// components
import Background from "../../components/content/Background.astro";
import BuildSnippet from "../../components/builds/BuildSnippet.astro";
import Container from "../../components/Container.astro";
import HeadingBase from "../../components/content/headings/HeadingBase.astro";
import Section from "../../components/Section.astro";

// content
import { getCollection } from "astro:content";
const allBuilds = await getCollection("builds");
const sortedBuilds = allBuilds.sort((a, b) => {
    const first = new Date(a.data.date);
    const last = new Date(b.data.date);

    return last.getTime() - first.getTime();
});

// aggregate the metadata
const allMakes = [];
const allModels = [];
allBuilds.map((b) => allMakes.push(b.data.make));
allBuilds.map((b) => allModels.push(b.data.model));
const uniqueMakes = [...new Set(allMakes)];
const uniqueModels = [...new Set(allModels)];
---

<Layout>
    <Background>
        <Section>
            <HeadingBase heading="THOR Builds" subheading="Our recent work" description="Anim aute id magna aliqua ad ad non deserunt sunt. Qui irure qui lorem cupidatat commodo. Elit sunt amet fugiat veniam occaecat fugiat aliqua." />

            <Container>
                <div class="grid grid-cols-1 gap-12 xl:grid-cols-4">
                    <!-- filters -->
                    <div class="space-y-6">
                        <div class="sticky top-48">
                            <form action="#" method="post">
                                <div class="grid grid-cols-1 gap-y-6 gap-x-8">
                                    <div class="space-y-2 mb-6">
                                        <div>
                                            <input type="text" name="first-name" id="first-name" autocomplete="given-name" class="block w-full rounded-md border-0 bg-white/10 py-2 px-3.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-amber-400 sm:text-sm sm:leading-6" placeholder="Search our builds..." />
                                        </div>
                                    </div>

                                    <div class="space-y-2">
                                        <label for="email" class="block font-semibold leading-6 text-white">Vehicle Make</label>
                                        <div>
                                            <select name="email" id="email" autocomplete="email" class="block w-full rounded-md border-0 bg-white/10 py-2 px-3.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-amber-400 sm:text-sm sm:leading-6">
                                                <option class="text-black">All</option>
                                                {
                                                    uniqueMakes.map((m) => (
                                                        <option class="text-black" value={m}>
                                                            {m}
                                                        </option>
                                                    ))
                                                }
                                            </select>
                                        </div>
                                    </div>

                                    <div class="space-y-2">
                                        <label for="email" class="block font-semibold leading-6 text-white">Vehicle Model</label>
                                        <div>
                                            <select name="email" id="email" autocomplete="email" class="block w-full rounded-md border-0 bg-white/10 py-2 px-3.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-amber-400 sm:text-sm sm:leading-6">
                                                <option class="text-black">All</option>
                                                {
                                                    uniqueModels.map((m) => (
                                                        <option class="text-black" value={m}>
                                                            {m}
                                                        </option>
                                                    ))
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- build listings -->
                    <div class="col-span-3 space-y-16">
                        <ul role="list" class="mx-auto grid max-w-2xl grid-cols-1 gap-x-6 gap-y-20 sm:grid-cols-3 lg:mx-0 lg:max-w-none lg:gap-x-8 xl:col-span-3">
                            {sortedBuilds.map((b) => <BuildSnippet build={b} />)}
                        </ul>
                    </div>
                </div>
            </Container>
        </Section>
    </Background>
</Layout>
