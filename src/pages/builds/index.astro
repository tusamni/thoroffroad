---
import Layout from "../../layouts/Layout.astro";

// components
import BuildSnippet from "../../components/builds/BuildSnippet.astro";
import Container from "../../components/Container.astro";
import Filter from "../../components/builds/Filter.astro";
import HeadingBase from "../../components/content/headings/HeadingBase.astro";
import ImageOverlay from "../../components/content/headings/ImageOverlay.astro";
import ListingGrid from "../../components/builds/ListingGrid.astro";
import Picture from "../../components/images/Picture.astro";
import Section from "../../components/Section.astro";

// content
import { getCollection } from "astro:content";
const allBuilds = (await getCollection("builds")).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const allMakes = await getCollection("makes");
const allParts = await getCollection("parts");
---

<Layout>
    <ImageOverlay>
        <Picture slot="image" src="team/shop/thoroffroad-02.jpg" class="absolute inset-0 w-full h-full object-cover saturate-50" width={2000} height={2000} alt={``} />
        <HeadingBase heading="THOR Builds" subheading="Our recent work" description="Anim aute id magna aliqua ad ad non deserunt sunt. Qui irure qui lorem cupidatat commodo. Elit sunt amet fugiat veniam occaecat fugiat aliqua." />
    </ImageOverlay>

    <Section classes="bg-neutral-300">
        <Container>
            <div class="grid grid-cols-1 gap-12 xl:grid-cols-4">
                <!-- filters -->
                <div class="space-y-6">
                    <div class="sticky top-48">
                        <div class="space-y-8">
                            <div class="space-y-4">
                                <h6 class="text-neutral-800">Filter by Parts</h6>
                                <div class="grid grid-cols-2 gap-3">
                                    {allParts.map((p) => <Filter href={`/builds/${p.slug}`}>{p.data.title}</Filter>)}
                                </div>
                            </div>

                            <div class="space-y-4">
                                <h6 class="text-neutral-900">Filter by Vehicle</h6>
                                <div class="grid grid-cols-2 gap-3">
                                    {allMakes.map((m) => <Filter href={`/builds/${m.slug}`}>{m.data.title}</Filter>)}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- build listings -->
                <ListingGrid>
                    {allBuilds.map((b) => <BuildSnippet build={b} sizes="350px" />)}
                </ListingGrid>
            </div>
        </Container>
    </Section>
</Layout>
