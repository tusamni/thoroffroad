---
import Layout from "@/layouts/Layout";

// imports
import Container from "@/components/Container";

// color steps
const colors = [50, 100, 200, 300, 400, 500, 600, 700, 800, 900, 950];
---

<Layout>
	<Container classes="section">
		<div class="space-y-8">
			<h1 class="uppercase font-bold">Colors</h1>
			<div class="flex flex-col gap-10">
				<div class="flex justify-between gap-5">
					{colors.map((c) => <div class={`p-10 rounded flex items-center justify-center bg-torch-red-${c}`}>{c}</div>)}
				</div>

				<div class="flex justify-between gap-5">
					{colors.map((c) => <div class={`p-10 rounded flex items-center justify-center bg-shiraz-${c}`}>{c}</div>)}
				</div>

				<div class="flex justify-between gap-5">
					{colors.map((c) => <div class={`p-10 rounded flex items-center justify-center bg-chathams-blue-${c}`}>{c}</div>)}
				</div>

				<div class="flex justify-between gap-5">
					{colors.map((c) => <div class={`p-10 rounded flex items-center justify-center bg-rock-${c}`}>{c}</div>)}
				</div>

				<div class="flex justify-between gap-5">
					{colors.map((c) => <div class={`p-10 rounded flex items-center justify-center bg-merlin-${c}`}>{c}</div>)}
				</div>
			</div>
		</div>
	</Container>
</Layout>
