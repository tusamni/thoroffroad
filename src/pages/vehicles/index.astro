---
import Layout from "../../layouts/Layout.astro";

// components
import { Icon } from "astro-icon";
import Background from "../../components/content/Background.astro";
import Container from "../../components/Container.astro";
import HeadingBase from "../../components/content/headings/HeadingBase.astro";
import Hover from "../../components/images/Hover.astro";
import ImageOverlay from "../../components/content/headings/ImageOverlay.astro";
import Picture from "../../components/images/Picture.astro";
import Section from "../../components/Section.astro";
import Steps from "../../components/content/Steps.astro";
import Surround from "../../components/content/Surround.astro";

// content
import { getCollection } from "astro:content";
const allMakes = await getCollection("makes");
const allModels = await getCollection("models");

// content
const process = [
    {
        title: "We Know the Brands",
        description: "We love everything automotive and have decades of experience working on the top vehicle brands and platforms.",
    },
    {
        title: "We Know the Parts",
        description: "We only work with top manufacturers and have done the research and testing required to perfectly match parts for our off-road vehicle builds.",
    },
    {
        title: "What Are You Looking For?",
        description: "Our entire mission is to create purpose-built vehicles and we take the time to know you and the goals you have for your vehicle.",
    },
    {
        title: "We Build It",
        description: "We match great design with high quality parts and professional installation to create the off-road or adventure vehicle of your dreams.",
    },
];
const vehicleFill = {
    title: "Don't See Your Vehicle?",
    descriptionShort: "We don't only work on trucks. If you've got a vehicle you're interested in modifying, why not give us a call or e-mail and see what we can do for you?",
    featured: "vehicles/2021-11-26/utv_01.jpg",
};
---

<Layout>
    <ImageOverlay>
        <Picture slot="image" src="shop/2023-02-23/shop-shoot_01.jpg" alt="Ford F-250 Modified by THOR Off Road" class="absolute w-full h-full object-cover object-[50%,80%] rounded shadow-2xl" sizes="800px" />

        <div class="space-y-24">
            <HeadingBase heading="Texas' Top<br />Truck Outfitter" subheading="Our Process" description="Lorem ipsum, dolor sit amet consectetur adipisicing elit. Maiores impedit perferendis suscipit eaque, iste dolor cupiditate blanditiis ratione." />

            <Container>
                <div class="grid grid-cols-1 gap-8 lg:grid-cols-4">
                    {process.map((p, i) => <Steps darkTheme={true} number={i + 1} heading={p.title} content={p.description} />)}
                </div>
            </Container>
        </div>
    </ImageOverlay>

    <Background theme="secondary">
        <Section>
            <Container>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
                    {
                        allMakes.map((v) => (
                            <Surround href={`/vehicles/${v.slug}`} content={v.data} subtitle="Models" title={v.data.title}>
                                {allModels.map((m) => {
                                    if (m.data.make.toLowerCase().includes(v.slug)) {
                                        return <li>{m.data.title}</li>;
                                    }
                                })}
                            </Surround>
                        ))
                    }
                    {(<Surround href="/contact" content={vehicleFill} />)}
                </div>
            </Container>
        </Section>
    </Background>
</Layout>
